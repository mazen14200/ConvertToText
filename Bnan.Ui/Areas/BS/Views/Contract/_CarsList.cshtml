                    </div>
                    <div class="col-sm-12  col-md-12 pt-3 col-lg-6 details-car-fieldset">
                        <p>@item.CrCasCarInformationSerailNo</p>
                        <p>@item.CrCasCarInformationConcatenateArName</p>
                        <p>
                            <img src="@Url.Content(item.CrCasCarInformationCvtNavigation?.CrMasSupCarCvtImage?.ToString())" style="width: 50px; height: 20px ;padding-left: 10px;padding-right: 10px;">
                            <img src="@Url.Content(item.CrCasCarInformationFuelNavigation?.CrMasSupCarFuelImage?.ToString())" style="width: 50px; height: 20px ;padding-left: 10px;padding-right: 10px;">
                            <img src="~/BranchSys/CreateContract/img/Rectangle 96.png"><span style="padding-right: 10px;">@item.CrCasCarInformationDistributionNavigation.CrMasSupCarDistributionSmallBags</span>
                            <img src="~/BranchSys/CreateContract/img/Rectangle 95.png"><span style="padding-right: 10px;">@item.CrCasCarInformationDistributionNavigation.CrMasSupCarDistributionBagBags</span>
                            <img src="~/BranchSys/CreateContract/img/Rectangle 97.png"><span style="padding-right: 10px;">@item.CrCasCarInformationDistributionNavigation.CrMasSupCarDistributionPassengers</span>
                            <img src="~/BranchSys/CreateContract/img/Rectangle 98 (1).png"><span>@item.CrCasCarInformationDistributionNavigation.CrMasSupCarDistributionDoor</span>
                        </p>
                    </div>
                    <div class="col-sm-12 col-md-12 col-lg-4 pt-3 icon-details-car-fieldset">
                        <p>
                            <span>@localizer["CurrentMeter"]:</span>
                            <span>@item.CrCasCarInformationCurrentMeter</span>
                        </p>
                        @if (item.CrCasCarInformationDocumentationStatus == false && item.CrCasCarInformationMaintenanceStatus == false)
                        {
                            <p>
                                <span style="color:red">@localizer["CarDocumentMaintainanceReview"]</span>
                            </p>
                        }
                        else if (item.CrCasCarInformationDocumentationStatus == true && item.CrCasCarInformationMaintenanceStatus == false)
                        {
                            <p>
                                <span style="color:red">@localizer["CarMaintainceReview"]</span>
                            </p>
                        }
                        else if (item.CrCasCarInformationDocumentationStatus == false && item.CrCasCarInformationMaintenanceStatus == true)
                        {
                            <p>
                                <span style="color:red">@localizer["CarDocumentReview"]</span>
                            </p>
                        }
                    </div>
                </div>
            </td>

        </tr>
    }
}

