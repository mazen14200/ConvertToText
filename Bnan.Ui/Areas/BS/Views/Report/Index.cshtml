@using Bnan.Core.Extensions;
@using Bnan.Ui.ViewModels.BS;
@using Microsoft.AspNetCore.Identity;
@using Microsoft.EntityFrameworkCore;
@using Newtonsoft.Json;
@model BSLayoutVM
@inject IViewLocalizer localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha384-..." crossorigin="anonymous">


<link href="~/BranchSys/Pages/css/style.css" rel="styleSheet">
@if (requestCulture?.RequestCulture.UICulture.Name != "ar-EG")
{
    <link href="~/BranchSys/Pages/css/English_style.css" rel="styleSheet">
}



<section class="section-mainCard">
    <div class="row justify-content-center w-100 h-100">
        <div class="col-11 col-sm-10 col-md-11 col-lg-11 col-xl-10 text-center p-0 ">
            <div class="card main-card ">
                <div class="row pt-2">
                    <a href="#" style="width: fit-content;">
                        <img src="~/BranchSys/Pages/img/cancel.png" alt="cancle_icon" class="cancle-icon">
                    </a>
                </div>
                <div class="row layout-row">

                    <div class="row" style="flex-direction: row-reverse;">
                        <div class="col justify-content-center d-flex title-row">
                            <h1 class="card-title">
                                @localizer["FinancelReport"]
                            </h1>
                        </div>

                    </div>
                    <div class="row justify-content-center h-100 content-row">

                        <div class="col-md-11 mx-0">

                            <form id="report-form">
                                <fieldset>
                                    <div class="form-card">
                                        <div class="row " style="flex-direction:row-reverse">
                                            <div class="col-md-7 col-lg-4 d-flex " style="flex-direction:row-reverse;flex-wrap:wrap">
                                                <div class="col-auto">
                                                    <p>@localizer["UserBalanceInBranch"]</p>
                                                </div>
                                                <div class="col-auto personal-data">
                                                    <P>15050.00</P>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-lg-3 d-flex" style="flex-direction:row-reverse">
                                                <div class="col-auto">
                                                    <P>@localizer["AvailableBalance"]</P>
                                                </div>
                                                <div class="col-auto personal-data">
                                                    <P>0.00</P>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-lg-3 d-flex" style="flex-direction:row-reverse">
                                                <div class="col-auto">
                                                    <P>@localizer["ReservedBalance"]</P>
                                                </div>
                                                <div class="col-auto personal-data">
                                                    <P> 225.75</P>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row " style="flex-direction:row-reverse">

                                            <div class="col-md-4 col-lg-4 d-flex" style="flex-direction:row-reverse">
                                                <div class="col-auto">
                                                    <P>@localizer["CreditorTotal"]</P>
                                                </div>
                                                <div class="col-auto personal-data">
                                                    <P> 0.00</P>
                                                </div>
                                            </div>
                                            <div class="col-md-4 col-lg-3 d-flex" style="flex-direction:row-reverse">
                                                <div class="col-auto">
                                                    <P> @localizer["DebitTotal"]</P>
                                                </div>
                                                <div class="col-auto personal-data">
                                                    <P> 225.75</P>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row pb-2 seacrh-row flex-row-reverse" style="justify-content: space-between;">
                                            <div class="col d-flex align-items-center Search-col flex-row-reverse flex-wrap gap-4">
                                                <div class="col-md-4 d-flex flex-row-reverse gap-3">
                                                    <label for="start-date">@localizer["From"]</label>
                                                    <input type="date" class="form-control" id="start-date" name="start-date" required>
                                                </div>
                                                <div class="col-md-4 d-flex flex-row-reverse gap-3">
                                                    <label for="end-date">@localizer["To"]</label>
                                                    <input type="date" class="form-control" id="end-date" name="end-date" required>
                                                </div>

                                                <button type="submit" class="btn btn-custom me-2">@localizer["Show"]</button>
                                            </div>
                                            <div class="col-auto d-flex  radio-container flex-row-reverse flex-wrap">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input custom" type="radio" name="Options" id="all" value="All" checked />
                                                    <label class="form-check-label" for="all">@localizer["All"]</label>
                                                </div>

                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input custom" type="radio" name="Options" id="Custody" value="Custody" />
                                                    <label class="form-check-label" for="Custody">@localizer["Custody"]</label>
                                                </div>

                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input custom" type="radio" name="Options" id="reserved" value="reserved" />
                                                    <label class="form-check-label" for="reserved">@localizer["booked"]</label>
                                                </div>

                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input custom" type="radio" name="Options" id="deported" value="deported" />
                                                    <label class="form-check-label" for="deported">@localizer["Transfer"]</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row table-row">
                                            <div class="col table-scroll w-100 report_table">
                                                <partial name="_ReportsData"/>
                                            </div>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<footer class="fixed-bottom-xl">
    <div class="before-footer-widget">
        <svg width: 100%; height:auto viewbox="0 0 2444 132">
            <path fill="rgba(254, 248, 232, 1)" fill-rule="evenodd"
                  d="M1222 0h1222c-444.13 88-852.127 132-1223.993 132C849.253 132 442.585 88.263 0 .789V0h1222z">
            </path>
        </svg>
    </div>
</footer>