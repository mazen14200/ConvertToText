@using Bnan.Core.Extensions 
@model Tuple<IEnumerable<CrMasSupCarFuel>, List<List<string>>>
@inject IViewLocalizer localizer
@inject IOptions<RequestLocalizationOptions> options
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
       ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}"; 
}
@if (requestCulture?.RequestCulture.UICulture.Name == "en-US")
{
    <div class="col-sm-12">
        <table id="basic-datatable" class="table table-bordered dt-responsive nowrap w-100 dataTable no-footer dtr-inline table-hover" role="grid" aria-describedby="basic-datatable_info" style="position: relative; width: 1166px;">
            <thead>
                <tr >
                    <th aria-sort="ascending" aria-label="Name: activate to sort column descending">@localizer["No"]</th>
                    <th aria-sort="ascending" aria-label="Name: activate to sort column descending">@localizer["CarFuelCode"]</th>
                    <th aria-label="Position: activate to sort column ascending">@localizer["CarFuelName"]</th>
                    <th aria-label="Position: activate to sort column ascending">@localizer["Count"]</th>
                    <th aria-label="Position: activate to sort column ascending">@localizer["Status"]</th>
                </tr>
            </thead>
            <tbody>

                @{
                    int no = 1;
                }
                @foreach (var item in Model.Item1)
                {
                    @if (item.CrMasSupCarFuelStatus == @Status.Deleted || item.CrMasSupCarFuelStatus == @Status.Hold)
                    {
                        <tr onclick="location.href='@Url.Action("Edit", "CarFuel", new { id = item.CrMasSupCarFuelCode })'" style="cursor:pointer;color:red">
                            <td>@no</td>
                            <td>@item.CrMasSupCarFuelCode</td>
                            <td>@item.CrMasSupCarFuelEnName</td>
                            <td>
                                @if (Model.Item2 != null)
                                {
                                    @foreach (var row in Model.Item2)
                                    {
                                        if(row[0] == @item.CrMasSupCarFuelCode)
                                        {
                                            @row[1]
                                        }

                                    }
                                }
                            </td>
                            <td>
                                &emsp;
                                @if (@item.CrMasSupCarFuelStatus == Status.Deleted)
                                {
                                    @localizer["Deleted"]
                                }
                                else if (@item.CrMasSupCarFuelStatus == Status.Hold)
                                {
                                    @localizer["Hold"]
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr onclick="location.href='@Url.Action("Edit", "CarFuel", new { id = item.CrMasSupCarFuelCode })'">
                            <td>@no</td>
                            <td>@item.CrMasSupCarFuelCode</td>
                            <td>@item.CrMasSupCarFuelEnName</td>
                            <td>
                                @if (Model.Item2 != null)
                                {
                                    @foreach (var row in Model.Item2)
                                    {
                                        if (row[0] == @item.CrMasSupCarFuelCode)
                                        {
                                            @row[1]
                                        }

                                    }
                                }
                            </td>
                            <td>
                                &emsp;
                                @if (@item.CrMasSupCarFuelStatus == Status.Active)
                                {
                                    @localizer["Active"]
                                }
                            </td>
                        </tr>
                    }
                    no++;
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="col-sm-12">
        <table id="basic-datatable" class="table table-bordered dt-responsive nowrap w-100 dataTable no-footer dtr-inline table-hover" role="grid" aria-describedby="basic-datatable_info" style="position: relative; width: 1166px;">
            <thead>
                <tr role="row">
                    <th aria-sort="ascending" aria-label="Name: activate to sort column descending" >@localizer["No"]</th>
