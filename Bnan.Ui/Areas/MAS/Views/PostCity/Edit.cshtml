@using Bnan.Core.Extensions
@model Bnan.Ui.ViewModels.MAS.PostCityVM

@inject IViewLocalizer localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
       ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";   
}

@{
    ViewData["Page-title"] = localizer["Edit PostCity Data"];
    ViewData["Page-Hint"] = localizer["Edit PostCity Hint"];
}

<title>@ViewData["Title"]</title>

<style>
    .row {
        align-items: center;
    }
</style>


<div class="sub-container-form">
    <form class="needs-validation" novalidate asp-area="MAS" asp-controller="PostCity" asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-contain">
            @*PostCity Code*@
            <div class="row mt-2">
                <div class="col-md-2">
                    <label class="form-label" for="PostCityCode">@localizer["PostCityCode"]</label>
                </div>
                <div class="col-md-4">
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityCode" id="PostCityCode" maxlength="100" width="80%" readonly />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityStatus" id="PostCitytatus" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityEnName" id="CrMasSupPostCityEnName" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityArName" id="CrMasSupPostCityArName" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityConcatenateEnName" id="CrMasSupPostCityConcatenateEnName" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityConcatenateArName" id="CrMasSupPostCityConcatenateArName" maxlength="100" width="80%" hidden />

                    <input type="text" class="form-control" asp-for="CrMasSupPostCityGroupCode" id="CrMasSupPostCityGroupCode" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityRegionsCode" id="CrMasSupPostCityRegionsCode" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityCounter" id="CrMasSupPostCityCounter" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityRegionsStatus" id="CrMasSupPostCityRegionsStatus" maxlength="100" width="80%" hidden />
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityStatus" id="CrMasSupPostCityStatus" maxlength="100" width="80%" hidden />

                </div>
            </div>

            @if (requestCulture.RequestCulture.UICulture.Name != "en-US")
            {
                @*PostCity name arabic*@
                <div class="row mt-2">
                    <div class="col-md-2">
                        <label class="form-label" for="CrMasSupPostCityConcatenateArName">@localizer["PostCityConcateAr"]</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" asp-for="CrMasSupPostCityConcatenateArName" id="PostCityNameAr" maxlength="50" width="80%" data-val-required="@localizer["requiredFiled"]" oninput="this.value=this.value.replace(/[^\u0600-\u06FF\ufb50-\ufdff\ufe70-\ufeff\s]/g, '')" readonly />
                        <div style="margin-top:2px">
                            <div style="height: 1.0em">
                                <span asp-validation-for="@Model.CrMasSupPostCityConcatenateArName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (requestCulture.RequestCulture.UICulture.Name == "en-US")
            {
                @*PostCity name English*@
                <div class="row mt-2">
                    <div class="col-md-2">
                        <label class="form-label" for="PostCityConcateAr">@localizer["PostCityConcateEn"]</label>
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control" asp-for="CrMasSupPostCityConcatenateEnName" data-val-required="@localizer["requiredFiled"]" maxlength="50" id="PostCityNameEn" width="80%" oninput="this.value = this.value.replace(/[^a-zA-Z ]/g, '')" readonly />
                        <div style="margin-top:2px">
                            <div style="height: 1.0em">
                                <span asp-validation-for="@Model.CrMasSupPostCityConcatenateEnName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            }



            @*PostCity Location*@
            <div class="row mt-2">
                <div class="col-md-1">
                    <label class="form-label" for="PostCityLocation">@localizer["PostCityLocation"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityLocation" id="PostCityLocation" width="80%" />
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupPostCityLocation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>


            @*PostCity Longitude and Latiude*@
            <div class="row mt-2">
                <div class="col-md-1">
                    <label class="form-label" for="PostCityLong">@localizer["PostCityLong"]</label>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityLongitude" maxlength="50" id="PostCityLong" width="80%" oninput="this.value = this.value.replace(/[^0-9.,]/g, '')">
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupPostCityLongitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-1">
                    <label class="form-label" for="PostCityLat">@localizer["PostCityLat"]</label>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityLatitude" maxlength="50" id="PostCityLat" width="80%" oninput="this.value = this.value.replace(/[^0-9.,]/g, '')">
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupPostCityLatitude" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            @*reasons*@
            <div class="row mt-2">
                <div class="col-md-1">
                    <label class="form-label" for="Reasons">@localizer["reasons"]</label>
                </div>
                <div class="col-md-7">
                    <input type="text" class="form-control" asp-for="CrMasSupPostCityReasons" maxlength="120" id="PostCityReasons" width="80%">
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="@Model.CrMasSupPostCityReasons" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        @Html.ValidationMessage("NoCHanged", null, new { @class = "text-danger" })

        <div class="mt-4" id="buttonContainer">

            <button type="submit" id="saveEdit" class="btn btn-primary ms-1">@localizer["Save"]</button>

            @if (Model.CrMasSupPostCityStatus == "A")
            {
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.Hold" data-bs-targett="#centermodalhold">
                    @localizer["Hold"]
                </a>
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.Deleted" data-bs-targett="#centermodalDelete">
                    @localizer["Delete"]
                </a>
            }
            else if (Model.CrMasSupPostCityStatus == "H")
            {
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.UnHold" data-bs-targett="#centermodalRHold">
                    @localizer["ReactiveHold"]
                </a>
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.Deleted" data-bs-targett="#centermodalDelete">
                    @localizer["Delete"]
                </a>
            }
            else if (Model.CrMasSupPostCityStatus == "D")
            {
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.Hold" data-bs-targett="#centermodalhold">
                    @localizer["Hold"]
                </a>
                <a type="button" class="btn btn-primary ms-1" data-bs-toggle="modal" data-error="@Status.UnDeleted" data-bs-targett="#centermodalRDelete">
                    @localizer["ReactiveDelete"]
                </a>
            }

            <a type="button" class="btn btn-danger ms-2" asp-area="MAS" asp-controller="PostCity" asp-action="Index">
                @localizer["Back"]
            </a>
        </div>
    </form>
</div>


<!-- MOdel-->
<!-- Reactive Hold PostCity MOdel-->
<div class="modal fade" id="centermodalRHold" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <h4>@localizer["SureToRetriveHold"]</h4>
                <p>@localizer["HintSureToRetriveHPostCity"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@localizer["Cancel"]</button>
                <button type="button" id="retriveUserButtonH" class="btn btn-primary">@localizer["Okay"]</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- Reactive Delete PostCity MOdel-->
<div class="modal fade" id="centermodalRDelete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body">
                <h4>@localizer["SureToRetriveDelete"]</h4>
                <p>@localizer["HintSureToRetriveDPostCity"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@localizer["Cancel"]</button>
                <button type="button" id="retriveUserButtonD" class="btn btn-primary">@localizer["Okay"]</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- Delete PostCity Modal-->
<div class="modal fade" id="centermodalDelete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body">
                <h4>@localizer["SureTodelete"]</h4>
                <p> @localizer["HintSureTodeletePostCity"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@localizer["Cancel"]</button>
                <button type="button" id="deleteUserButton" class="btn btn-primary">@localizer["Okay"]</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!-- Hold PostCity MOdel-->
<div class="modal fade" id="centermodalhold" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-body">
                <h4>@localizer["SureToHold"]</h4>
                <p> @localizer["HintSureToHoldPostCity"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">@localizer["Cancel"]</button>
                <button type="button" id="holdUserButton" class="btn btn-primary">@localizer["Okay"]</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function updatePostCitytatus(status) {
            var code = document.getElementById("PostCityCode").value;
            $.ajax({
                type: "POST",
                url: "/MAS/PostCity/EditStatus",
                data: { status: status, code: code },
                success: function (result) {
                    $('.modal').modal('hide');
                    window.location.href = "/MAS/PostCity/Index";
                    console.log(result);

                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

        // Event listener for delete Lessor button
        $('#deleteUserButton').click(function () {
            updatePostCitytatus('D');
        });

        // Event listener for hold Lessor button
        $('#holdUserButton').click(function () {
            updatePostCitytatus('H');
        });

        // Event listener for retrieve Lessor button
        $('#retriveUserButtonD').click(function () {
            updatePostCitytatus('Reactivate');
        });

        $('#retriveUserButtonH').click(function () {
            updatePostCitytatus('Reactivate');
        });

        $("#buttonContainer a").on("click", function (event) {
            var status = $(this).attr("data-error")
            var Modal = $(this).attr("data-bs-targett")
            CheckValidation('1108002', status).done(function (data) {
                if (data) $(Modal).modal('show');
            });
        })

        $("#saveEdit").on("click", function (event) {
            event.preventDefault();
            CheckValidation('1108002', '@Status.Insert').done(function (data) {
                if (data) {
                    $('form').submit();
                }
            });
        })
    </script>

}

