@model Bnan.Ui.ViewModels.Identitiy.LoginViewModel

<div class="account-pages pt-2 pt-md-5 pt-sm-2 pb-sm-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">

                    <!-- Logo -->
                    <div class="card-header pt-4 pb-4 text-center">
                        <a href="index.html">
                            <span><img src="assets/Pictures/logo.png" alt="" height="18"></span>
                        </a>
                    </div>

                    <div class="card-body p-4">

                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center pb-0 fw-bold">Sign In</h4>
                            <p class="text-muted mb-4">Enter your email address and password to access admin panel.</p>
                        </div>

                        <form asp-action="Login">

                            <div class="mb-3">
                                <label for="username" asp-for="UserName" class="form-label">username</label>
                                <input class="form-control" asp-for="UserName" type="username" id="username" placeholder="Enter your email">
                                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                                @Html.ValidationMessage("stat", null,  new { @class = "text-danger" })
                                @Html.ValidationMessage("userLogin", null,  new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                <a href="pages-recoverpw.html" class="text-muted float-end"><small>Forgot your password?</small></a>
                                <label for="password" class="form-label">Password</label>
                                <input type="password" asp-for="Password" id="password" class="form-control" placeholder="Enter your password">
                                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                @Html.ValidationMessage("Hint", null,  new { @class = "text-danger" })
                            </div>

                            <div class="mb-3 mb-3">
                                <div class="form-check">
                                    <input type="checkbox" as class="form-check-input" id="checkbox-signin" checked="">
                                    <label class="form-check-label" for="checkbox-signin">Remember me</label>
                                </div>
                            </div>

                            <div class="mb-3 mb-0 text-center">
                                <button class="btn" type="submit"> Log In </button>
                            </div>

                        </form>
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

