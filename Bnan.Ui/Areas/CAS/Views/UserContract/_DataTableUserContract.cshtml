                        <td id="_Nc">@item.CrCasRenterContractBasic3?.CrCasRenterPrivateDriverInformationTraveledDistance</td>

                        
                        <td>

                            @if (@item.CrCasRenterContractBasic3.CrCasRenterPrivateDriverInformationStatus == Status.Active)
                            {
                                @localizer["Active"]
                            }
                            else if (@item.CrCasRenterContractBasic3.CrCasRenterPrivateDriverInformationStatus == Status.Rented)
                            {
                                @localizer["Rented_n"]
                            }
                            else if (@item.CrCasRenterContractBasic3.CrCasRenterPrivateDriverInformationStatus == Status.Hold)
                            {
                                @localizer["Hold"]
