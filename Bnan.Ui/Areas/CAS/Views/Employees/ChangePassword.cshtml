@model Bnan.Ui.ViewModels.Identitiy.ChangePasswordVM

@inject IViewLocalizer localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    ViewData["returnUrl"] = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

@{
    ViewData["Page-title"] = localizer["ChangePassword Data"];
    ViewData["Page-Hint"] = localizer["ChangePassword Hint"];
    ViewData["Title"] = localizer["ChangePassword"];
}
<style>
    .row {
        align-items: center;
    }

    input {
        width: 150px !important,
    }
</style>
<title>@ViewData["Title"]</title>
<div class="sub-container-form">

    <form class="needs-validation" novalidate asp-area="CAS" asp-controller="Employees" asp-action="ChangePassword" method="post">
        <div class="form-contain mb-2">
            <div class="row mt-3">
                <div class="col-md-1" id="pass">
                    <label class="form-label" for="UserNameAr">@localizer["CurrentPassword"]</label>
                </div>
                <div class="col-md-3">
                    <input type="password" class="form-control" asp-for="CurrentPassword" maxlength="10" data-val-required="@localizer["requiredFiled"]" oninput="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete="off" required>
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            @Html.ValidationMessage("NotExist", null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-1" id="pass">
                    <label class="form-label" for="UserNameAr">@localizer["NewPassword"] </label>
                </div>
                <div class="col-md-3">
                    <input type="password" class="form-control" asp-for="NewPassword" maxlength="10" data-val-required="@localizer["requiredFiled"]" oninput="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete="off" required>
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-1" id="pass">
                    <label class="form-label" for="UserNameAr">@localizer["ConfirmNewPassword"]</label>
                </div>
                <div class="col-md-3">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" maxlength="10" data-val-required="@localizer["requiredFiled"]" oninput="this.value=this.value.replace(/[^0-9]/g,'')" autocomplete="off" required>
                    <div style="margin-top:2px">
                        <div style="height: 1.0em">
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            @Html.ValidationMessage("Exist", null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary ms-2" type="submit" id="btn">@localizer["Save"]</button>
            <a type="button" class="btn btn-danger ms-2" title="@localizer["Back"]" asp-area="CAS" asp-controller="Home" asp-action="Index">
                @localizer["Back"]
            </a>
        </div>
    </form>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}