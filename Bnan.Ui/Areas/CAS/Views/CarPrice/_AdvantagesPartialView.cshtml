@model List<CrCasCarAdvantage>
@inject IViewLocalizer localizer
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();

}
@if (Model != null && Model.Count() > 0)
{
    <div class="col-sm-12">
        <table class="table table-bordered table-striped " id="myTable">
            <thead>
                <tr>
                    <th>
                        @localizer["No"]
                    </th>
                    <th width="70%">
                        @localizer["Advantages"]
                    </th>

                    <th width="30%">
                        @localizer["Value"]
                    </th>

                </tr>
            </thead>
            <tbody>
                @{
                    int no = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @no
                        </td>
                        @if (requestCulture?.RequestCulture.UICulture.Name != "en-US")
                        {
                            <td>
                                @item.CrCasCarAdvantagesCodeNavigation.CrMasSupCarAdvantagesArName
                            </td>
                        }
                        else
                        {
                            <td>
                                @item.CrCasCarAdvantagesCodeNavigation.CrMasSupCarAdvantagesEnName
                            </td>
                        }

                        <td style="padding: 0 !important;">
                            <input type="text" class="form-control Features" id="Features@item.CrCasCarAdvantagesCode" data-id="@item.CrCasCarAdvantagesCode" name="Features[IndexOf(item)]" style="width:100%;border:none;" autocomplete="off" value="0" oninput="validateInput3Digit(this)" />

                        </td>
                    </tr>
                    no++;
                }
            </tbody>
        </table>
    </div>
}